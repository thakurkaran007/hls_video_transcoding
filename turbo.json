{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/web/.next/**",
        "!apps/web/.next/cache/**",
        "packages/ui/dist/**"
      ]
    },
    "dev": {
      "cache": true,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
